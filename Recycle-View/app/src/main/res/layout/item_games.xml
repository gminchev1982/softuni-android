<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Title"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_small"/>

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="168dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:text="123" />
        <TextView
            android:id="@+id/txt_voteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="points" />

        <TextView
            android:id="@+id/txt_commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:text="123" />
        <TextView
            android:id="@+id/txt_commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="comments" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



        <ImageView
            android:id="@+id/img_voted"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:src="@drawable/ic_check_black_24dp"
            android:gravity="center_vertical"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/img_unvoted"
            android:layout_toRightOf="@id/img_voted"
            android:layout_width="48dp"
            android:layout_margin="@dimen/margin_small"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/ic_thumb_down_black_24dp"
             />

        <ImageView
            android:id="@+id/img_comment"
            android:layout_toRightOf="@id/img_unvoted"
            android:layout_margin="@dimen/margin_small"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat_bubble_outline_black_24dp"
            android:gravity="center_vertical"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="0"
            android:src="@drawable/ic_share_black_24dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <EditText
        android:id="@+id/txt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:visibility="gone"
        android:inputType="text"
        />
    <Button
        android:id="@+id/btn_comment_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Send"
        android:visibility="gone"/>
</LinearLayout>